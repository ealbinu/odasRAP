    body
        #app
            // START
            scene(v-if="currentScene==0" :key="0" start-scene @completed="sceneCompleted")

            // SCENES
            scene(v-if="currentScene==1" :key="1" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="7" scene-color="#ED1C25")
                info(type="dragdrop" title=title text="Observa las imágenes y coloca la figura o número que corresponda para completar el orden del patrón." textaudio="s/instruccion1.mp3" :autoplay="true")
                    .mt-auto: embedvideo(urlid="tjFbJw4v2Sw" title="Figuras que forman el mundo" small)
                    .mt-auto: embedvideo(urlid="28oSwAFFirE" title="Patrones de figuras" small)
                activity
                    .row.w100.super
                        img(src="i/1.png").w100
                        .drops
                            template(v-for="(i, index) in ['cu','tr', 'ci', 're', 'cu', 'tr', 'ci']")
                                .drop(:data="i" droptimes="untilok")
                    .row.drags.superfigs
                        template(v-for="(i, index) in ['ci','re', 'cu', 'tr']")
                            drag(:data="i" dropzone=".drop" dropzone-ok-class="isok" no-error-sound return-to-position)
                                img(:src="'i/'+i+'.png'").w100
            
            // SCENES
            scene(v-if="currentScene==2" :key="2" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="4" scene-color="#ED1C25")
