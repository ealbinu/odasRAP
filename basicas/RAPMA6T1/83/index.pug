include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Consigo el mínimo común múltiplo'
- subtitle = 'Los medicamentos'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .main .numbers {
                background: #f5f5f5;
                border-radius: 6px;
            }
            .boxy {
                background: #f5f5f5;
                padding: 0 2px 10px;
                position: relative;
                border-radius: 6px;
                border: 2px solid #fff;
            }
            @media (max-width: 680px) {
                .boxy {
                    padding: 0;
                }
            }
            .boxy .inputbox input {
                font-size: 1.2rem;
                padding: 2px;
                max-width: 80%;
            }
            @media (max-width: 680px) {
                .boxy .inputbox input {
                    font-size: 0.8rem;
                }
            }
            .boxy .inputbox .numbers {
                font-size: 1.6rem;
                color: #fff;
            }
            @media (max-width: 680px) {
                .boxy .inputbox .numbers {
                    font-size: 0.8rem;
                    padding: 2px;
                }
            }
            .boxy .check {
                margin: -20px auto 10px 0;
                padding: 0;
                justify-content: center;
            }
            @media (max-width: 680px) {
                .boxy .check {
                    max-height: 20px;
                }
            }
            .boxy .check .checkbox {
                margin-right: 0;
                background: #fff;
                transform: scale(0.8);
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
            }
            @media (max-width: 680px) {
                .boxy .check .checkbox {
                    transform: scale(0.5);
                }
            }
            .ex1 .main .numbers {
                border: 4px solid #389CCA;
            }
            .ex1 .boxy {
                background: #389CCA;
            }
            .ex2 .main .numbers {
                border: 4px solid #94C774;
            }
            .ex2 .boxy {
                background: #94C774;
            }
            .ex3 .main .numbers {
                border: 4px solid #8A6DA3;
            }
            .ex3 .boxy {
                background: #8A6DA3;
            }
            .ex4 .main .numbers {
                border: 4px solid #F0A360;
            }
            .ex4 .boxy {
                background: #F0A360;
            }

            .ex5 .h4 {
                background: var(--clear);
                padding: 3px 0;
                margin: 0;
                border-radius: 6px;
                color: #fff;
                text-align: center;
            }
            .ex5 .out {
                margin: 2px;
                display: flex;
                align-items: flex-end;
            }
            .ex5 .out:nth-child(4n+1) .selectable {
                border-color: #E9832C;
            }
            .ex5 .out:nth-child(4n+2) .selectable {
                border-color: #AE4E8F;
            }
            .ex5 .out:nth-child(4n+3) .selectable {
                border-color: #887544;
            }
            .ex5 .out:nth-child(4n+4) .selectable {
                border-color: #6A4287;
            }
            .ex5 .selectable {
                background: #fff;
                border-top: solid 2px #f0f0f0;
                border-bottom: solid 2px #f0f0f0;
                border-left: solid 14px #f0f0f0;
                border-right: solid 14px #f0f0f0;
                text-align: center;
                padding: 1px 0;
                border-radius: 2px;
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
                display: inline-block;
                width: 80%;
            }
            @media (max-width: 680px) {
                .ex5 .selectable {
                    border-left: solid 2px #f0f0f0;
                    border-right: solid 2px #f0f0f0;
                }
            }
            .ex5 .selectable .result {
                transform: scale(0.6);
                margin-right: -16px;
                margin-top: -16px;
            }
            .ex5 .commas {
                display: inline-block;
            }
            hr{
                margin: 60px;
                border: none;
                border-top: 8px dashed var(--clear);
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Escribe los múltiplos de los siguientes números y marca así <checkmark></checkmark> los múltiplos comunes entre cada pareja.

            .row.mt-3.ex1.no-gutters.centerrow.text-center
                .col-2.main: numbers(c=2) 8
                .col(v-for="(i, index) in tempsobj.a").boxy
                    check(v-model="d['1'+index]" :ref="refCount()"  @isright="right++" :answer="i.mul")
                    template(v-if="!i.ex")
                        inputbox(v-model="d['2'+index]" :ref="refCount()" @isright="right++" :answer="i.n" type="number" placeh="#")
                    template(v-else)
                        inputbox( :answer="i.n" type="number" placeh="#" example)
            
            .row.mt-3.ex2.no-gutters.centerrow.text-center
                .col-2.main: numbers(c=5) 6
                .col(v-for="(i, index) in tempsobj.b").boxy
                    check(v-model="d['3'+index]" :ref="refCount()"  @isright="right++" :answer="i.mul")
                    template(v-if="!i.ex")
                        inputbox(v-model="d['4'+index]" :ref="refCount()" @isright="right++" :answer="i.n" type="number" placeh="#")
                    template(v-else)
                        inputbox( :answer="i.n" type="number" placeh="#" example)

            hr

            .row.mt-3.ex3.no-gutters.centerrow.text-center
                .col-2.main: numbers(c=8) 3
                .col(v-for="(i, index) in tempsobj.c").boxy
                    check(v-model="d['5'+index]" :ref="refCount()"  @isright="right++" :answer="i.mul")
                    template(v-if="!i.ex")
                        inputbox(v-model="d['6'+index]" :ref="refCount()" @isright="right++" :answer="i.n" type="number" placeh="#")
                    template(v-else)
                        inputbox( :answer="i.n" type="number" placeh="#" example)

            .row.mt-3.ex4.no-gutters.centerrow.text-center
                .col-2.main: numbers(c=4) 4
                .col(v-for="(i, index) in tempsobj.d").boxy
                    check(v-model="d['7'+index]" :ref="refCount()"  @isright="right++" :answer="i.mul")
                    template(v-if="!i.ex")
                        inputbox(v-model="d['8'+index]" :ref="refCount()" @isright="right++" :answer="i.n" type="number" placeh="#")
                    template(v-else)
                        inputbox( :answer="i.n" type="number" placeh="#" example)

            .instruccion.mt-5 Marca así <markex></markex> el mínimo común múltiplo del 4 y 7.
            
            .row.mt-3.ex5.no-gutters.centerrow
                .col-md-4.h4 Múltiplos de 4:
                .col-md
                    .row.no-gutters.centerrow
                        .col(v-for="(i, index) in [4,8,12,16,20,24,28]").out
                            selectable(ex :isok="i==28" v-model="d['9'+index]" :ref="refCount()" @isright="right++") {{i}}
                            div.commas
                                template(v-if="index<6") ,
                                template(v-else) .
            .row.mt-3.ex5.no-gutters.centerrow
                .col-md-4.h4 Múltiplos de 7:
                .col-md
                    .row.no-gutters.centerrow
                        .col(v-for="(i, index) in [7,14,21,28,35,42,49]").out
                            selectable(ex :isok="i==28" v-model="d['10'+index]" :ref="refCount()" @isright="right++") {{i}}
                            div.commas
                                template(v-if="index<6") ,
                                template(v-else) .


            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
