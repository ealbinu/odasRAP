include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Comparo y ordeno números'
- subtitle = 'Camino a la escuela / Los cheques del jefe'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .inputbox {
                text-align: center;
                font-size: 1.2rem;
                margin-bottom: 20px;
                padding: 10px;
                background: #f5f5f5;
                border-radius: 10px;
            }
            .inputbox input {
                border: 2px solid var(--main);
                color: var(--main);
                max-width: 120px;
                min-width: 80px;
                padding: 4px;
                margin: 0 10px;
                font-size: 1.6rem;
            }
            @media (max-width: 680px) {
                .inputbox input {
                    font-size: 1.2rem;
                }
            }
            @media (max-width: 680px) {
                .inputbox {
                    font-size: 1rem;
                }
            }
            .inputbox .t1,
            .inputbox .t2 {
                width: 40%;
                font-weight: bold;
            }
            .inputbox .t1 {
                text-align: right;
            }
            .inputbox .t2 {
                text-align: left;
            }
            .inputbox:nth-child(odd) .t1 {
                color: #E9832C;
            }
            .inputbox:nth-child(odd) .t2 {
                color: #6A4287;
            }
            .inputbox:nth-child(even) .t1 {
                color: #0084BF;
            }
            .inputbox:nth-child(even) .t2 {
                color: #6CB743;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}
            .row
                embedvideo(urlid="qz7OfcWv63k" title="Nombro números muy grandes")
                embedvideo(urlid="3R1GoZqL1NE" title="Comparando números")

            .instruccion.mt-5 Lee las siguientes cantidades y escribe el signo #[strong >] o #[strong <] según corresponda.

            .row.mt-3.ex1
                .col-12
                    inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" answer="<" type="text" placeh="> o <")
                        template(v-slot:before=""): .t1 Mil setecientos treinta y cinco.
                        template(v-slot:after=""): .t2 Mil setecientos cincuenta y tres.
                    inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" answer=">" type="text" placeh="> o <")
                        template(v-slot:before=""): .t1 Ocho mil doscientos sesenta y cinco.
                        template(v-slot:after=""): .t2 Mil ochocientos sesenta y cinco.
                    inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" answer=">" type="text" placeh="> o <")
                        template(v-slot:before=""): .t1 Tres mil doscientos veintiuno.
                        template(v-slot:after=""): .t2 Tres mil doscientos uno.
                    inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" answer="<" type="text" placeh="> o <")
                        template(v-slot:before=""): .t1 Cinco mil ciento cuarenta y cuatro.
                        template(v-slot:after=""): .t2 Cinco mil cuatrocientos cuarenta y uno.
                    inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" answer="<" type="text" placeh="> o <")
                        template(v-slot:before=""): .t1 Ochocientos cuarenta y dos.
                        template(v-slot:after=""): .t2 Novecientos noventa y cinco.


            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
