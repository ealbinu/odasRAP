include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Represento fracciones con gráficos'
- subtitle = '¿Qué parte es?'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .inputbox input {
                border-radius: 6px;
                padding: 2px;
                font-size: 1.4rem;
                max-width: 80px;
            }
            hr {
                margin: 10px auto;
                border: none;
                border-top: 4px solid var(--main);
                max-width: 100px;
            }
            .ope {
                border: 4px solid #f5f5f5;
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
                border-radius: 10px;
                padding: 10px 0;
                text-align: center;
                margin: 10px;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Escribe la fracción que representa la parte coloreada en cada dibujo.

            .row.mt-3.ex1.centerrow
                .col-md-6
                    .row.centerrow.ope
                        .col-6: img(src="aimg/a1.png").img-fluid
                        .col-6
                            inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#")
                            hr
                            inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="10" type="number" placeh="#")
                .col-md-6
                    .row.centerrow.ope
                        .col-6: img(src="aimg/a2.png").img-fluid
                        .col-6
                            inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="3" type="number" placeh="#")
                            hr
                            inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#")
                .col-md-6
                    .row.centerrow.ope
                        .col-6: img(src="aimg/a3.png").img-fluid
                        .col-6
                            inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" :answer="2" type="number" placeh="#")
                            hr
                            inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" :answer="7" type="number" placeh="#")
                .col-md-6
                    .row.centerrow.ope
                        .col-6: img(src="aimg/a4.png").img-fluid
                        .col-6
                            inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" :answer="5" type="number" placeh="#")
                            hr
                            inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" :answer="8" type="number" placeh="#")
                .col-md-6
                    .row.centerrow.ope
                        .col-6: img(src="aimg/a5.png").img-fluid
                        .col-6
                            inputbox(v-model="r[8]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#")
                            hr
                            inputbox(v-model="r[9]" :ref="refCount()" @isright="right++" :answer="6" type="number" placeh="#")
                .col-md-6
                    .row.centerrow.ope
                        .col-6: img(src="aimg/a6.png").img-fluid
                        .col-6
                            inputbox(v-model="r[10]" :ref="refCount()" @isright="right++" :answer="1" type="number" placeh="#")
                            hr
                            inputbox(v-model="r[11]" :ref="refCount()" @isright="right++" :answer="5" type="number" placeh="#")
            





