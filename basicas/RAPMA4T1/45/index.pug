include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Divido los ángulos'
- subtitle = 'El transportador'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .ex1 {
                background: #f5f5f5;
                border-radius: 10px;
                padding: 10px 0;
            }
            .ex1 .label {
                font-size: 1.2rem;
            }
            .ex1 .inputbox , .ex2 .inputbox{
                font-size: 2rem;
                color: var(--sec);
                background: var(--clear);
                padding: 4px 0;
                border-radius: 10px;
            }
            .ex1 .inputbox input , .ex2 .inputbox input {
                font-size: 1.6rem;
                width: 120px;
                margin-right: 6px;
            }
            .imgin {
                max-width: 200px;
                padding: 10px;
                margin: 0 auto;
            }
            .imgin img {
                border-radius: 10px;
                box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}
            
            .row: embedvideo(urlid="hxBeDDcHctE" title="Aprendemos fracciones")
            
            .row: embedvideo(urlid="qGEmSU076Ak" title="Aprendo a medir los ángulos")

            .instruccion.mt-5 Contesta las preguntas y luego realiza lo que se pide. 

            .row.mt-3.ex1.align-items-center
                .col-sm-8: .label #[strong 1.] ¿Cuántos grados mide un círculo?
                .col: inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="360" type="number" placeh="#"): template(v-slot:after=""): strong º
            .row.mt-3.ex1.align-items-center
                .col-sm-8: .label #[strong 2.] ¿Cuál es la mitad de 360º?
                .col: inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="180" type="number" placeh="#"): template(v-slot:after=""): strong º
            .row.mt-3.ex1.align-items-center
                .col-sm-8: .label #[strong 3.] ¿Cuál es la cuarta parte de 360º?
                .col: inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="90" type="number" placeh="#"): template(v-slot:after=""): strong º
            .row.mt-3.ex1.align-items-center
                .col-sm-8: .label #[strong 4.] ¿Cuál es la sexta parte de 360º?
                .col: inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" :answer="60" type="number" placeh="#"): template(v-slot:after=""): strong º
            
            .row.mt-3.ex1.align-items-center
                .col-sm-8: .label #[strong 5.] ¿Cuántos grados mide la doceava parte del círculo?
                    .imgin: img(src="aimg/1a.png").img-fluid
                .col: inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" :answer="30" type="number" placeh="#"): template(v-slot:after=""): strong º

            .instruccion.mt-5 Mide los siguientes ángulos con un transportador y anota sus medidas en los recuadros. Consulta las páginas 64 y 65 de tu libro de texto SEP.

            .row.mt-3.ex2
                .col-sm-4
                    .imgin: img(src="aimg/2a.png").img-fluid
                    inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" :answer="30" type="number" placeh="#"): template(v-slot:after=""): strong º
                .col-sm-4
                    .imgin: img(src="aimg/2b.png").img-fluid
                    inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" :answer="60" type="number" placeh="#"): template(v-slot:after=""): strong º
                .col-sm-4
                    .imgin: img(src="aimg/2c.png").img-fluid
                    inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" :answer="90" type="number" placeh="#"): template(v-slot:after=""): strong º

            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
