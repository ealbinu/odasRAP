include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Completo sucesiones de figuras'
- subtitle = '¿Y los que faltan? / De cuánto en cuánto'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .recuadropalabras {
                background: #FFD505;
                box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.1);
            }
            .recuadropalabras img {
                max-width: 120px;
                max-height: 90px;
            }
            .recuadropalabras .draggable > div {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-around;
                align-items: center;
            }
            .stars {
                background: #f5f5f5;
                padding: 10px;
                border-radius: 10px;
            }
            .stars .st {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
            }
            .stars .st .s img {
                width: 18px;
            }
            .stars .st img {
                max-width: 90%;
                max-height: 100px;
            }
            .stars .st .dragdrop {
                height: 100%;
                width: 100%;
                background: #FFD505;
                border-radius: 10px;
                min-height: 80px;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }
            .stars .st .dragdrop .draggable {
                flex-grow: 1;
                min-height: 100%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }
            .stars .st .dragdrop .draggable > div:not(.result) {
                flex-grow: 1;
                display: flex;
                justify-content: center;
                align-items: center;
                min-width: 100%;
            }
            .stars > :last-child {
                font-size: 1.2rem;
                margin-top: 10px;
            }
            .ex2 {
                background: #E4F1F7;
                margin-bottom: 50px;
                border-radius: 10px;
            }
            .ex2 .label {
                background: #FFD60A;
                text-align: center;
                padding: 4px;
                border-radius: 10px;
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}
            
            .row: embedvideo(urlid="egk9UwgCjiI" title="Sucesiones con figuras")

            .instruccion.mt-5 Coloca las figuras que faltan para completar cada sucesión y después selecciona la respuesta correcta. 

            .recuadropalabras
                dragdrop(:options="['<img src=aimg/s16.png>','<img src=aimg/s36.png>','<img src=aimg/s28.png>','<img src=aimg/s24.png>']" :options-ok="[]"  group="g1")

            .row.mt-3.ex1.justify-content-start.align-items-start.flex-wrap
                .col-md-3.col-6.mb-2: .stars.text-center
                        .st: .s(v-for="(i, index) in 4"): img(src="aimg/s.png")
                        div Figura 1
                .col-md-3.col-6.mb-2: .stars.text-center
                        .st: .s(v-for="(i, index) in 8"): img(src="aimg/s.png")
                        div Figura 2
                .col-md-3.col-6.mb-2: .stars.text-center
                        .st: .s(v-for="(i, index) in 12"): img(src="aimg/s.png")
                        div Figura 3
                .col-md-3.col-6.mb-2: .stars.text-center
                        .st: dragdrop(v-model="r[0]" :ref="refCount()" @isright="right++" :options="[]" :options-ok="['<img src=aimg/s16.png>']" group="g1")
