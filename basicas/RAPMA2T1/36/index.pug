include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Resuelvo sumas y restas'
- subtitle = 'Los juguetes'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .preg {
                background: #f5f5f5;
                padding: 10px;
                border-radius: 10px;
                margin: 10px;
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
            }
            .preg .inputbox {
                max-width: 180px;
                margin: 0 auto;
            }
            .preg .inputbox input {
                margin: 4px;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Observa la ilustración y resuelve los siguientes problemas.

            .row: .col-12: img(src="aimg/a1.png").w-100

            .row.mt-3.ex1
                .col-12
                    .preg
                        labeltext(num="1.") Juan Manuel compró un martillo y un kilo de clavos. ¿Cuánto gastó?
                        inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="43" type="number" placeh="#")
                            template(v-slot:before=""): numbers(c=2) $
                    .preg
                        labeltext(num="2.") Ángel necesita comprar un juego de llaves, un desarmador y 5 tornillos. Si va a pagar con un billete de $200, ¿cuánto le tienen que regresar de cambio?
                        inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="100" type="number" placeh="#")
                            template(v-slot:before=""): numbers(c=2) $
                    .preg
                        labeltext(num="3.") Héctor compró unas pinzas y un juego de llaves. ¿Cuánto dinero gastó?
                        inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="115" type="number" placeh="#")
                            template(v-slot:before=""): numbers(c=2) $
                    .preg
                        labeltext(num="4.") Paco compró un kilogramo de clavos y dos martillos. ¿Cuánto dinero gastó?
                        inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" :answer="73" type="number" placeh="#")
                            template(v-slot:before=""): numbers(c=2) $
                    .preg
                        labeltext(num="5.") Adrián quiere comprar un desarmador, un serrucho y un paquete de tornillos. Si va a pagar con un billete de $200, ¿cuánto le darán de cambio?
                        inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" :answer="80" type="number" placeh="#")
                            template(v-slot:before=""): numbers(c=2) $
            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
