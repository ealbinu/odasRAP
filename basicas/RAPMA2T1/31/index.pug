include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Resuelvo los problemas'
- subtitle = '¿Suma o multiplicación?'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .choose {
                background: #f5f5f5;
                border: 2px solid #CD9DBC;
                text-align: center;
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
            }
            .choose .label {
                font-size: 1.7rem;
            }
            .choose .options {
                margin: 0;
            }
            .choose .options div {
                border: none;
                background: #fff;
                padding: 10px;
                border-radius: 10px;
            }
            .choose .options div.active {
                border: none;
                background: #BEE1E0;
                color: #000;
            }
            .itms:nth-child(3n+2) .choose {
                border-color: #BDDBA3;
            }
            .itms:nth-child(3n+2) .choose .options div.active {
                background: #F9D4AD;
            }
            .itms:nth-child(3n+3) .choose {
                border-color: #92D1D0;
            }
            .itms:nth-child(3n+3) .choose .options div.active {
                background: #E0C2D4;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}
            
            .row: embedvideo(urlid="R_Z22uvHFaY" title="Multiplicación")

            .instruccion.mt-5 Encierra el resultado correcto de cada operación.

            .row.mt-3.ex1
                .col-md-4.col-sm-6(v-for="(i, index) in tempsobj.a").itms: choose(v-model="r[index]" :ref="refCount()" :text="i[0] + ' ='" :options="i[1]" @isright="right++" :answer-num="i[2]")
            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
            script.
                app.$set(app.tempsobj, 'a', [
                    ['8 × 2', [16, 10], 0],
                    ['10 + 3',[30,13],1],
                    ['2 × 7',[9,14],1],
                    ['12 + 7',[84,19],1],
                    ['2 × 8',[10,16],1],
                    ['8 + 9',[17,72],0],
                    ['2 × 4',[6,8],1],
                    ['6 + 4',[24,10],1],
                    ['2 × 9',[11,18],1],
                    ['6 + 9',[15,54],0],
                    ['2 × 5',[7,10],1],
                    ['4 + 8',[12,32],0],
                ])