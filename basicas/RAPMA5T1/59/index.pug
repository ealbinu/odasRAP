include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Aprendo nuevos sistemas numéricos'
- subtitle = 'Los números romanos'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .ex1 .imagerelative .items > div {
                width: 13%;
            }
            .ex1 .imagerelative .items > div:nth-child(1) {
                left: 3%;
                top: 6%;
            }
            .ex1 .imagerelative .items > div:nth-child(2) {
                left: 53.5%;
                top: 6%;
            }
            .ex1 .imagerelative .items > div:nth-child(3) {
                left: 25.5%;
                top: 59%;
                width: 9%;
            }
            .ex1 .imagerelative .items > div:nth-child(4) {
                left: 80%;
                top: 35%;
                width: 8%;
            }
            .ex1 .imagerelative .items > div input {
                padding: 0;
            }
            @media (max-width: 820px) {
                .ex1 .imagerelative .items > div input {
                    padding: 1px;
                    font-size: 0.9rem;
                }
            }
            @media (max-width: 680px) {
                .ex1 .imagerelative .items > div input {
                    padding: 0;
                    font-size: 0.5rem;
                    border-width: 1px;
                    border-radius: 3px;
                }
            }

            .ex2 .inputbox {
                background: #f5f5f5;
                margin-bottom: 10px;
                padding: 10px;
                border-radius: 10px;
                font-size: 1.2rem;
            }
            .ex2 .inputbox input {
                font-size: 1.2rem;
                max-width: 160px;
