            .ex3 .imagerelative .items > div:nth-child(2) {
                left: 36%;
                top: 36%;
            }
            .ex3 .imagerelative .items > div:nth-child(3) {
                left: 36%;
                top: 48%;
            }
            .ex3 .imagerelative .items > div:nth-child(4) {
                left: 36%;
                top: 60%;
            }
            .ex3 .imagerelative .items > div:nth-child(5) {
                left: 36%;
                top: 72%;
            }
            .ex3 .imagerelative .items > div:nth-child(6) {
                left: 36%;
                top: 84%;
            }
            @media (max-width: 680px) {
                .ex3 .imagerelative .items > div input {
                    padding: 0;
                    font-size: 0.5rem;
                    border: none;
                }
            }



    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}
            
            .text-center: embedvideo(urlid="mRL-lkmuu5c" title="Los números romanos")

            .instruccion.mt-5 Completa la información que falta en la siguiente línea del tiempo.

            .row.mt-3.ex1: .col-12
                .imagerelative
                    img(src="aimg/a1.png").w-100
                    .items
                        inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" answer="MCMXVII" type="text" placeh="-")
                        inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" answer="MCMXXIV" type="text" placeh="-")
                        inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" answer="1925" type="text" placeh="-")
                        inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" answer="1929" type="text" placeh="-")
            
            .instruccion.mt-5 Escribe las siguientes cantidades en números romanos.

            .row.mt-3.ex2
                .col-md-6
                    inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" answer="CMXC" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="1.") 990
                    inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" answer="MCCXXXV" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="2.") 1 235
                    inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" answer="MDXXIV" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="3.") 1 524
                    inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" answer="MMCLXXXVI" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="4.") 2 186
                    inputbox(v-model="r[8]" :ref="refCount()" @isright="right++" answer="MMMLXXVII" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="5.") 3 077
                .col-md-6
                    inputbox(v-model="r[9]" :ref="refCount()" @isright="right++" answer="MDCCCLIX" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="1.") 1 850
                    inputbox(v-model="r[10]" :ref="refCount()" @isright="right++" answer="MMDCCCLXIV" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="2.") 2 864
                    inputbox(v-model="r[11]" :ref="refCount()" @isright="right++" answer="MMXXVI" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="3.") 2 026
                    inputbox(v-model="r[12]" :ref="refCount()" @isright="right++" answer="DCCCLXXII" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="4.") 872
                    inputbox(v-model="r[13]" :ref="refCount()" @isright="right++" answer="MMMCDXXVIII" type="text" placeh="-")
                        template(v-slot:before=""): labeltext(num="5.") 3 428

            .instruccion.mt-5 Resuelve las siguientes operaciones con números romanos. Observa el ejemplo.

            .row.mt-3.ex3: .col-12
                .imagerelative
                    img(src="aimg/b1.png").w-100
                    .items
                        inputbox(v-model="r[14]" :ref="refCount()" @isright="right++" answer="LXXV" type="text" placeh="-")
                        inputbox(v-model="r[15]" :ref="refCount()" @isright="right++" answer="CIV" type="text" placeh="-")
                        inputbox(v-model="r[16]" :ref="refCount()" @isright="right++" answer="LXVI" type="text" placeh="-")
                        inputbox(v-model="r[17]" :ref="refCount()" @isright="right++" answer="LII" type="text" placeh="-")
                        inputbox(v-model="r[18]" :ref="refCount()" @isright="right++" answer="L" type="text" placeh="-")
                        inputbox(v-model="r[19]" :ref="refCount()" @isright="right++" answer="CLXVI" type="text" placeh="-")


            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
