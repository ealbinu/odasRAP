include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Publico mis notas informativas'
- subtitle = 'Noticias de mi comunidad'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .ex1 p{ font-size: 1.2rem; }
            .inputbox{
                max-width: 100px;
                margin: 10px auto;
            }
            .bx{
                padding: 10px;
                border-radius: 10px;
                background: #f5f5f5;
                border: 2px solid #fff;
            }
    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5  Escribe #[strong V] si la frase es verdadera o #[strong F] si es falsa.

            .row.mt-3.text-center.ex1
                .col-6.bx
                    inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" answer="v" type="text" placeh="-")
                    p Las notas informativas son breves.
                .col-6.bx
                    inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" answer="f" type="text" placeh="-")
                    p En las notas informativas no importan las imágenes.
                .col-6.bx
                    inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" answer="v" type="text" placeh="-")
                    p En las notas informativas se usan distintos tamaños de letras.
                .col-6.bx
                    inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" answer="f" type="text" placeh="-")
                    p Los encabezados de las notas informativas son pequeños.




            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
